<table class="profile" summary=Profile information>
	<tr>
		<td class="main">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
				Admin? <%= @user.admin?.to_s %>
			</h1>
		</td>
		<td class="sidebar round">
			<strong>Name</strong> <%= @user.name %></br>
			<strong>User</strong> <%= link_to user_path(@user), @user %></br>
			<strong>Link to me</strong> <%= link_to @user.name, user_path(@user) %>
		</td>
	</tr>
</table>