current_user: <%= current_user.name  %>, @user: <%= @user.name %>, current_user following @user? <%= current_user.following?(@user) ? "true" : "false" %>
<% unless current_user?(@user) %>
  <div id="follow_form">
    <% if current_user.following?(@user) %>
      <%= render 'unfollow' %>
    <% else %>
      <%= render 'follow' %>
    <% end %>
  </div>
<% end %>